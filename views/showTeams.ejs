<% if(category == 'manager'){ %>
    <a href="/manage/teams/create">Create new team</a>
<% } %>
<table>
    <% if(category == 'manager'){ %>
        <thead>
            <th>
                <td>Name</td>
                <td>Members</td>
            </th>
        </thead>
        <tbody>
            <% results.forEach(result=>{ %>
                <tr>
                    <td><%=result.name%></td>
                    <td><%=result.members%></td>
                    <td><a href="/manage/teams/delete/<%=result.id%>">Delete Team</a></td>
                </tr>
            <% }) %>
        </tbody>
    <% } %>
    <% if(category == 'employee'){ %>
        <thead>
            <th>
                <td>Name</td>
                <td>Manager</td>
                <td>Members</td>
                <td>Task assigned</td>
            </th>
        </thead>
        <tbody>
            <tr>
                <td><%=results.name%></td>
                <td><%=results.manager%></td>
                <td><%=results.members%></td>
            </tr>
        </tbody>
    <% } %>
</table>


